<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sigin_bg"
    tools:context="com.resourcefulparenting.activity.AddChildQuestions">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back_red" />

            <TextView
                android:id="@+id/tv_recover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/brandon_grotesque_medium"
                android:gravity="center"
                android:text="@string/Know_about_ur_child"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/inside_tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/brandongrotesque_regular"
                android:text="@string/questions"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_recover" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/inside_rate_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:background="@color/blue_top"
                android:padding="5dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inside_tv_question" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/inside_rate_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:background="@color/blue_top"
                android:padding="5dp"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/inside_rate_1"
                app:layout_constraintTop_toBottomOf="@id/inside_tv_question" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/inside_rate_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:background="@color/blue_top"
                android:padding="5dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/inside_rate_2"
                app:layout_constraintTop_toBottomOf="@id/inside_tv_question" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/inside_rate_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:background="@color/blue_top"
                android:padding="5dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/inside_rate_3"
                app:layout_constraintTop_toBottomOf="@id/inside_tv_question" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/inside_rate_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:background="@color/blue_top"
                android:padding="5dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/inside_rate_4"
                app:layout_constraintTop_toBottomOf="@id/inside_tv_question" />

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:gravity="end"
                android:text="4/10"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/inside_rate_5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/inside_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:background="@color/black"
                android:fontFamily="@font/brandongrotesque_regular"
                android:padding="10dp"
                android:text="Kembali"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inside_rate_1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/inside_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/orange_bg"
                android:fontFamily="@font/brandongrotesque_regular"
                android:padding="10dp"
                android:text="@string/next"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inside_rate_1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/skip_questionnaire_button"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:text="@string/skip_questions"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inside_next" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="150dp"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:alpha="0.8"
                android:indeterminate="true" />
        </RelativeLayout>

